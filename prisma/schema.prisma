generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Basvuru {
  id        String   @id @default(cuid())
  adSoyad   String
  sinif     String
  okul      String
  telefon   String
  kurumSube String   @default("Rize")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([kurumSube])
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  kurumSube String   @default("Rize")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([kurumSube])
}
